
<Project Sdk="Microsoft.NET.Sdk">

  <!-- Target Framework -->
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <!-- Assembly Info -->
  <PropertyGroup>
    <AssemblyTitle>DeepL.NET</AssemblyTitle>
    <Version>0.2.0</Version>
    <Copyright>Copyright Â© 2020 David Neumann</Copyright>
    <Product>DeepL.NET - A .NET client for the DeepL translation service</Product>
    <Description>DeepL.NET is a fully-featured .NET client for the DeepL translation service.</Description>
  </PropertyGroup>

  <!-- NuGet Info -->
  <PropertyGroup>
    <Title>DeepL.NET</Title>
    <Authors>David Neumann</Authors>
    <PackageId>DeepL</PackageId>
    <PackageTags>deepl;translation</PackageTags>
    <PackageReleaseNotes>
      - Added some more information to the documentation and fixed some mistakes and typos in it
      - Fixed the name of the author in the NuGet package
      - Added all new languages that are now supported by DeepL:
        - British English (EN-GB) and American English (EN-US) were added (previously only invariant English was supported, the invariant version is still available for backwards compatibility)
        - Portuguese is no longer invariant (was changed from PT to PT-PT)
        - Chinese
        - Bulgarian
        - Czech
        - Danish
        - Greek
        - Estonian
        - Finnish
        - Hungarian
        - Lithuanian
        - Latvian
        - Romanian
        - Slovak
        - Slovenian
        - Swedish

      This release was made possible by the following contributors:

      - Markus Mattes (https://github.com/mmattes)
      - Patrick Beer (https://github.com/vandebeer)
    </PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RequireLicenseAcceptance>false</RequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/lecode-official/deepl-dotnet</PackageProjectUrl>
    <PackageIcon>logo64x64.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/lecode-official/deepl-dotnet.git</RepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <!-- General Assembly Properties -->
  <PropertyGroup>
    <RootNamespace>DeepL</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- Includes the logo of the project into the NuGet package -->
  <ItemGroup>
    <None
      Include="$([MSBuild]::NormalizePath('../../documentation/images/logo64x64.png'))"
      Pack="true"
      PackagePath="$([MSBuild]::NormalizePath('/'))" />
  </ItemGroup>

  <!-- Referenced Projects & NuGet Packages -->
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>
</Project>
